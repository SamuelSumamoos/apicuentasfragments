{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/CustomProperty",
  "definitions": {
    "CustomProperty": {
      "description": "Defines a generic name/value pair for custom property lists",
      "type": "object",
      "additionalProperties": true,
      "required": [
        "propertyName",
        "propertyValue"
      ],
      "properties": {
        "propertyName": {
          "type": "string",
          "description": "Name of the property"
        },
        "propertyValue": {
          "type": "string",
          "description": "Value of the property"
        }
      }
    }
  }
}