{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/ProductRelationshipType",
  "definitions": {
    "ProductRelationshipType": {
      "description": "Defines the types of relationships available, such as bundled with or substituted for",
      "type": "object",
      "additionalProperties": true,
      "required": [
        "id",
        "parentProductRole",
        "childProductRole"
      ],
      "properties": {
        "id": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "description": "Unique identifier for the entity, can be null on create if auto-generated"
        },
        "name": {
          "type": "string",
          "description": "Name of the product relationship type"
        },
        "parentProductRole": {
          "type": "string",
          "description": "What is the first role in the relationship, such as Consists of"
        },
        "childProductRole": {
          "type": "string",
          "description": "What is the second role in the relationship, such as Component of"
        },
        "auditInfo": {
          "type": "object",
          "description": "Audit information for the entity",
          "additionalProperties": true,
          "required": [
            "createdBy",
            "isDeleted",
            "updatedBy",
            "updatedDate",
            "createdDate"
          ],
          "properties": {
            "createdDate": {
              "anyOf": [
                {
                  "type": "string",
                  "format": "date-time"
                },
                {
                  "type": "null"
                }
              ],
              "description": "Timestamp of when the entity was created"
            },
            "createdBy": {
              "type": "string",
              "description": "Identifies the system or user which created the entity"
            },
            "updatedDate": {
              "anyOf": [
                {
                  "type": "string",
                  "format": "date-time"
                },
                {
                  "type": "null"
                }
              ],
              "description": "Timestamp of when the entity was last updated"
            },
            "updatedBy": {
              "type": "string",
              "description": "Identifies the system or user which last updated the entity"
            },
            "isDeleted": {
              "anyOf": [
                {
                  "type": "boolean"
                },
                {
                  "type": "null"
                }
              ],
              "description": "Indicates whether or not the entity has been soft-deleted"
            }
          }
        }
      }
    }
  }
}